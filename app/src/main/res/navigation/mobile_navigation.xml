<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.dicoding.storyapp.ui.stories.StoriesFragment"
        android:label="@string/title_stories"
        tools:layout="@layout/fragment_stories" />

    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.dicoding.storyapp.ui.maps.MapsFragment"
        android:label="@string/title_maps"
        tools:layout="@layout/fragment_maps"/>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.dicoding.storyapp.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

</navigation>